# Environment Configuration Template
# Copy to .env and fill in values

# Database
DATABASE_URL=sqlite:///database.db

# API Keys (optional - PubChem and NCI Resolver don't need keys)
CHEMSPIDER_API_KEY=your_key_here
DRUGBANK_API_KEY=your_key_here  # Only if using DrugBank

# API Rate Limits (requests per second)
PUBCHEM_RATE_LIMIT=5
COMPTOX_RATE_LIMIT=10
CIR_RATE_LIMIT=2
CHEMSPIDER_RATE_LIMIT=1

# Matching Thresholds (will be calibrated from validation stats)
AUTO_ACCEPT_THRESHOLD=0.93
REVIEW_THRESHOLD=0.75
DISAGREEMENT_CAP=0.84

# Model Configuration
MODEL_NAME=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Learning Configuration
RETRAINING_THRESHOLD=2000  # Validated pairs before retraining
INCREMENTAL_SAVE_FREQUENCY=100  # Save FAISS index every N additions

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/matcher.log

# Paths
DATA_DIR=data
MODELS_DIR=models
SNAPSHOTS_DIR=snapshots
